{
    "builds": [
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": { "distDir": "dist"}
        }
    ],
    "routes": [
        {
        "source": "/api/(.*)",
        "dest": "/backend/server.js"
        },
        {
        "source": "/(.*)",
        "destination": "/frontend/index.html"
        }
    ]
}